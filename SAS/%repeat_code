* repeatedly execute the macro %code(var=) for a list of variables;
%macro repeat_code(varlist=);
%local var; %local i;
%do i=1 %to %sysfunc(countw(&varlist));
	%let var=%scan(&varlist,&i);
	%code(var=&var);
%end;
%mend;

*example;
%macro code(var=);
proc sgplot data=nimbus;
histogram &var;
run;
%mend; 
%let log_cytokines=log_IFN_g  log_IL_12p70  log_IL_1RA 
					log_IL_2  log_IL_6  log_IL_8 
					log_IP_10 log_MCP_1 log_MIP_3a log_MIG log_PD_L1;
%repeat_code(varlist=&log_cytokines);
